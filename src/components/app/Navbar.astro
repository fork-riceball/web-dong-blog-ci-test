---
import { mainNav } from '@/config.ts';

interface NavbarItem {
  url: string;
  name: string;
}

export interface Props {
  themeColor: string;
}

const { themeColor } = Astro.props;
---

<nav
  style="height: var(--mainNav-height)"
  class="fixed bottom-0 left-0 flex items-center justify-between w-full sm:fixed sm:top-0 sm:bottom-auto z-50 filter md:backdrop-blur-none backdrop-blur-xl"
>
  <div class="h-full grid grid-cols-3 md:grid-cols-2 w-full">
    <!-- Brand -->
    <div class="flex items-center md:mx-8 mx-4">
      <a href={`${import.meta.env.BASE_URL}/`}>
        <h2>
          <svg width="140" height="40" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 140 40"
            ><path
              d="M51.7 15.9H55c1.4 0 2.6.3 3.5.8a5.03 5.03 0 0 1 2 2.1 6.71 6.71 0 0 1 .6 2.8c0 1.1-.3 2-.8 2.8s-1.2 1.4-2 1.9c-.8.4-1.8.7-2.8.7h-3.8V15.9zm3.4 9c1.1 0 2-.3 2.7-.9s1-1.4 1-2.5c0-.9-.2-1.6-.5-2.1-.4-.5-.8-.9-1.3-1.1s-.9-.3-1.4-.3h-1.8v6.9h1.3zm17.2-6.2c.5-.9 1.2-1.6 2.1-2.1s1.8-.8 2.8-.8 1.9.3 2.8.8 1.6 1.2 2.1 2.1.8 1.8.8 2.8-.3 2-.8 2.8c-.5.9-1.2 1.5-2.1 2s-1.8.8-2.8.8-2-.3-2.8-.8c-.9-.5-1.5-1.2-2-2-.5-.9-.8-1.8-.8-2.8s.2-2 .7-2.8zm2 4.5c.3.5.7 1 1.2 1.3s1.1.5 1.7.5 1.2-.2 1.7-.5a3.04 3.04 0 0 0 1.2-1.3c.3-.5.4-1.1.4-1.8s-.1-1.3-.5-1.8c-.3-.5-.7-1-1.2-1.3s-1.1-.5-1.7-.5-1.2.2-1.7.5a3.04 3.04 0 0 0-1.2 1.3c-.3.5-.4 1.1-.4 1.8s.2 1.3.5 1.8zm29.7-7.3v11.5h0l-7.7-7v6.5h-2.2V15.5h.1l7.7 7.1v-6.7h2.1zm20 10.5c-.4.2-.9.4-1.4.5s-1 .2-1.4.2c-1.2 0-2.2-.2-3.1-.7s-1.6-1.1-2-1.9c-.5-.8-.7-1.7-.7-2.8 0-1.3.3-2.4.8-3.3s1.2-1.6 2.1-2 1.8-.7 2.9-.7c.7 0 1.3.1 1.9.2s1.1.3 1.6.6l-.7 2c-.3-.2-.7-.3-1.2-.4s-.9-.2-1.3-.2c-1.2 0-2.1.3-2.8.9-.6.6-1 1.5-1 2.7 0 .7.2 1.3.5 1.8a3.04 3.04 0 0 0 1.3 1.2c.6.3 1.2.4 1.9.4s1.2-.1 1.5-.3v-1.3H121v-2.1h4.1v4.7l-1.1.5zm10.8 1.2c-.3-.2-.4-.5-.4-.9 0-.3.1-.6.4-.9.3-.2.6-.4 1-.4s.7.1 1 .4c.3.2.4.5.4.9s-.1.7-.4.9a1.69 1.69 0 0 1-1 .3c-.4 0-.8-.1-1-.3zm2.3-12.8l-.4 9.6h-2.1l-.4-9.6h2.9z"
              fill="#666"></path><linearGradient
              id="A"
              gradientUnits="userSpaceOnUse"
              x1="3.381"
              y1="16.745"
              x2="34.008"
              y2="16.745"
              ><stop offset="0" stop-color="" stop-opacity="0"></stop><stop offset="1" stop-color={`${themeColor}`}
              ></stop></linearGradient
            ><circle cx="18.7" cy="16.7" r="15.3" fill="url(#A)"></circle><path
              d="M42.8 32.1c0 2.8-6.9 5-15.3 5-8.5 0-15.3-2.2-15.3-5 0-.4.2-.8.5-1.2 1.9.8 3.9 1.2 6 1.2 4.4 0 8.5-1.9 11.2-4.9 7.3.3 12.9 2.4 12.9 4.9z"
              fill="#666"></path></svg
          >

          <!-- <img
            loading="lazy"
            class="dark:hidden"
            width="140"
            height="40"
            src="/images/brand/webdongLogo.svg"
            alt={`${brand.name} Logo`}
          />
          <img
            loading="lazy"
            class="hidden dark:block"
            width="140"
            height="40"
            src="/images/brand/webdongLogo-dark.svg"
            alt={`${brand.name} Logo Dark Version`}
          /> -->
        </h2>
      </a>
    </div>

    <!-- Navbar List -->

    <ul class="md:col-span-1 col-span-2 font-medium flex whitespace-nowrap">
      {
        mainNav.map((navbarLink: NavbarItem) => (
          <li class="flex-1">
            <a
              href={import.meta.env.BASE_URL + navbarLink.url}
              class=" inline-block w-full h-full flex justify-center items-center "
            >
              {navbarLink.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
