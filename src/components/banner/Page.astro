---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="mx-auto pt-0 pb-16 sm:pt-[var(--mainNav-height)]">
  <h1
    class="mx-auto my-8 px-4 text-left text-4xl font-bold leading-tight md:px-0 md:text-center md:text-7xl md:leading-tight"
    set:html={title}
  />
</section>
