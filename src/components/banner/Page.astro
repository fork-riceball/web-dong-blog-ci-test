---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="pt-0 sm:pt-[var(--mainNav-height)] mx-auto pb-16">
  <h1
    class="font-bold text-4xl md:text-7xl mx-auto my-8 text-left leading-tight md:leading-tight md:text-center"
    set:html={title}
  />
</section>
