---
import type { TagsList } from '@/types'

export interface Props extends TagsList {}

const { tags, tagHrefs } = Astro.props;
---

{tags && <ul class="flex gap-4 whitespace-nowrap">
  {
    tagHrefs ? tagHrefs.map((href, index) => (
      <li>
        <a class="p-1 inline-block capitalize opacity-40 hover:opacity-100" {href}>
          <span>#</span> <span data-pagefind-filter="tag">{tags[index]}</span>
        </a>
      </li>
    )) : tags.map((tag) => (
      <li>
        <span class="p-1 inline-block capitalize opacity-40 hover:opacity-100">
          <span>#</span> <span data-pagefind-filter="tag">{tag}</span>
        </span>
      </li>
    ))
  }
</ul>
}