---
const { category } = Astro.props;
export interface Props {
  category: string;
  isLink: boolean;
}

const { isLink } = Astro.props;
const Element = isLink ? 'a' : 'div';
---

<Element
  class="relative mr-4 whitespace-nowrap capitalize opacity-40 hover:opacity-100"
  {...isLink
      ? {
          href: `post/categories/${category}`,
        }
      : {}}
>
  {`@ ${category}`}
</Element>
