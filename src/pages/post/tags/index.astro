---
import Base from '@/layouts/Base.astro';
import PageBanner from '@/components/app/Hero.astro';
import Card from '@/components/card/Card.astro';
import CardGallery from '@/components/card/CardGallery.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('post');
const avaliablePosts = posts.filter((post) => !post.data.isDraft);
const tags = [...new Set(avaliablePosts.map((post) => post.data.tags).flat())];
---

<Base title={`文章標籤分類`} description={`所有標籤共${tags.length}項`}>
  <PageBanner title={`所有標籤共 ${tags.length} 項`} />
  <div class="mx-4">
    <CardGallery>
      {
        tags.map((tag) => (
          <ul>
            <li class="text-3xl">
              <Card>
                <a href={`${import.meta.env.BASE_URL}post/tags/${tag}`}>{tag}</a>
              </Card>
            </li>
          </ul>
        ))
      }
    </CardGallery>
  </div>
</Base>
